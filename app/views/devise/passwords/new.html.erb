<div class="container" style="margin-top:20px;">
  <div class="row justify-content-center">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-center">Recuperar contrase√±a</h3>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, :class => "form-control form-control-sm", autocomplete: "email" %>
          </div>
          <div class="actions">
            <%= f.submit "Enviar codigo", :class => "btn btn-success btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
