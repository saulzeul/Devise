<div class="container" style="margin-top:20px">
  <div class="row justify-content-center">
    <div class="card">
      <div class="card-body">
        <div class="imgEmpresa mx-auto"></div>
        <h3 class="card-title text-center">Iniciar sesion</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :Usuario %>
            <%= f.email_field :email, autofocus: true, :class => "form-control form-control-sm", autocomplete: "email" %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field  :password, :class => "form-control form-control-sm", autocomplete: "off" %>
          </div>
          <div class="actions">
            <%= f.submit "Iniciar sesion", :class => "btn btn-success btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
